<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearanceCollapsingToolbar" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:layout_marginStart">@dimen/standard_padding</item>
        <item name="android:layout_marginEnd">@dimen/standard_padding</item>
    </style>

    <style name="TextAppearanceTitle" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
</resources>